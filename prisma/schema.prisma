// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//criar os modelos/tabelas

model User{
  id        Int   @id @default(aultoIncrement())
  email     String
  password  String

  @@unique([email])
  @@maps('users')
}

model Credential{
  id        Int   @id @default(aultoIncrement())
  userName  String
  user      User  @relation(fields: [userId], references:[id])
  userId    Int
  url       String
  password  String
  title     String
  name      String
  label     String
  
  @@unique([title, name, label])
  @@maps('credentials')
}

model Note{
  id        Int   @id @default(aultoIncrement())
  user      User  @relation(fields: [userId], references:[id])
  userId    Int
  title     String
  name      String
  label     String
  note      String  

  @@unique([title, name, label, note])
  @@maps('notes')
}

model Card{
  id        Int   @id @default(aultoIncrement())
  user      User  @relation(fields: [userId], references:[id])
  userId    Int
  numCard   Int
  nameCard  String
  numSeg    Int
  dateCard  Int  
  password  String
  isVirtual Boolean                   //true or false
  type      Enum('credit', 'debit', 'credit and debit')   //credit or debt
  title     String
  name      String
  label     String

  @@unique([title, name, label, note])
  @@maps('cards')
}